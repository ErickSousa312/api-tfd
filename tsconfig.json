{
    "compilerOptions": {
      "target": "es6",                     // Ou outra versão do ECMAScript desejada
      "module": "commonjs",                // Ou "esnext" para ECMAScript modules
      "outDir": "./dist",                  // Pasta de saída para os arquivos transpilados
      "strict": true,                      // Ativa todas as opções rigorosas de verificação de tipos
      "esModuleInterop": true,             // Permite importar módulos CommonJS usando a sintaxe de módulo ES
      "sourceMap": true                    // Gera arquivos de mapeamento de origem para depuração
    },
    "include": [
      "src/**/*.ts"                       // Pasta onde estão seus arquivos TypeScript
    ],
    "exclude": [
      "node_modules"                      // Pasta que não deve ser compilada
    ]
  }
  